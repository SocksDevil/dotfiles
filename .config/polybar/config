format-connected-padding = 1
label-connected = %essid%
label-connected-background = ${color.background}
label-connected-for = ${color.foreground-alt}
label-connected-padding = 1
format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-background = ${color.background}

